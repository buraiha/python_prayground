{
    // dockerイメージ設定
    "image": "ubuntu:latest",
 
    // featuresの設定
    "features": {
        "ghcr.io/devcontainers/features/common-utils:latest":{
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000"
        },
        "ghcr.io/devcontainers/features/python:1.4.2":{
            "version": "3.12.2"
        },
        "ghcr.io/devcontainers/features/go:1.3.0":{
            "version": "1.22.1"
        },
        "ghcr.io/devcontainers/features/node:1.4.1":{
            "version": "20.12.0"
        },
        "ghcr.io/devcontainers/features/ruby:1.2.0":{
            "version": "3.2.3"
        },
        "ghcr.io/devcontainers/features/java:1.4.1":{
        },
        "ghcr.io/devcontainers/features/php:1.1.2":{
            "version": "8.3.3"
        },
        "ghcr.io/devcontainers/features/rust:1.1.1":{
            "version": "1.77.1 "
        },
        "ghcr.io/devcontainers/features/terraform:1.3.6":{
            "version": "1.7.5"
        }
    },
    
    // VS codeのカスタマイズ
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
                "oderwat.indent-rainbow",
                "ms-python.flake8"
            ]
        }
    },
    
    // 無定義だとrootで動いてしまうので、必要であればユーザを変更する。
    // features/common-utils なりほかの方法なりで、あらかじめ下記で指定したユーザーが作成されている必要がある。
    "remoteUser": "vscode",
    
    // コンテナが初めて開始された直後にコンテナ内で実行されます。
    "onCreateCommand": "",

    // 作成プロセス中に新しいコンテンツがソースツリーで利用可能になるたびに、onCreateCommand の後にコンテナ内で実行されます。
    "updateContentCommand": "",

    // updateContentCommand の後に dev コンテナが初めてユーザーに割り当てられたときに実行されます。
    // 基本的にはここに環境features等で設定する以外のコンテナ特有のスクリプトを記述する。
    "postCreateCommand": ""

}
